</section>


<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">

                <!-- /.box-header -->
                <div class="box-body">
                    <div id="example2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                        <div class="row"><div class="col-sm-6"></div><div class="col-sm-6"></div></div><div class="row">
                            <div class="col-sm-12">
                              
                                  <p> <a asp-action="Create">创建充值卡</a></p>
                                <form asp-controller="prepaidCards" asp-action="Index" method="get">
                                    <p>                                      

                                        充值卡查询: <input type="text" asp-for="@Model.SearchString"  placeholder="请输入卡号" />
                                        <input type="submit" value="搜索" class="btn btn-default" />
                                    </p>
                                </form>










                                <table id="example2" class="table table-bordered table-hover dataTable" role="grid" aria-describedby="example2_info">
                                    <thead>
                                        <tr role="row">

                                            <th tabindex="0" rowspan="1" colspan="1">卡号</th>
                                            <th tabindex="0" rowspan="1" colspan="1">密钥</th>
                                            <th tabindex="0" rowspan="1" colspan="1">使用者</th>
                                            <th tabindex="0" rowspan="1" colspan="1">使用状态</th>
                                            <th tabindex="0" rowspan="1" colspan="1">价格</th>

                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                            @foreach (var item in Model.Cards)
                                            {
                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">@item.CardCode</td>
                                                    <td>@item.SecretKey</td>
                                                    <td>@item.UserAccount</td>
                                                    <td>@item.Price</td>
                                                    @{
                                                        var status = "未使用";
                                                        if (item.CardStatus == 1)
                                                        {
                                                            status = "已使用";
                                                        }

                                                    }

                                                    <td>@status</td>

                                                    
                                                </tr>
                                            }
                                    </tbody>
                                    @*<tfoot>
                                            <tr><th rowspan="1" colspan="1">Rendering engine</th><th rowspan="1" colspan="1">Browser</th><th rowspan="1" colspan="1">Platform(s)</th><th rowspan="1" colspan="1">Engine version</th><th rowspan="1" colspan="1">CSS grade</th></tr>
                                        </tfoot>*@
                                </table>





                                <nav aria-label="Page navigation " style="text-align:center">
                                    <ul class="pagination pagination-lg">
                                        <li>
                                            <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex-1)" aria-label="上一页">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                        @for (int i = 1; i <= Model.PageTotal; i++)
                                        {
                                            <li><a asp-action="Index" asp-route-pageNumber="@i">@i</a></li>
                                        }


                                        <li>
                                            <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex+1)" aria-label="下一页">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>








                            </div>
                        </div>
