
@{
    Layout = "~/Views/Shared/_Layout_client.cshtml";
}



<h1>Knockout.js: Building Dynamic Client-Side Web Applications</h1>

<div id="bookDetails" class="row">
    <div class="col-md-2">
        <img src="http://ecx.images-amazon.com/images/I/51T%2BWt430bL._AA160_.jpg" alt="Knockout.js: Building Dynamic Client-Side Web Applications" title="Knockout.js: Building Dynamic Client-Side Web Applications" class="img-rounded">
    </div>
    <div class="col-md-5 col-md-offset-1">
        <h3>Jamie Munro</h3>
        <p>Your Price: $17.99</p>
        <p>List Price: <span style="text-decoration: line-through">$19.99</span></p>
        <p class="label label-success">Save 10 %</p>
        <p>...</p>
    </div>
    <div class="col-md-2 col-md-offset-2 bg-info">

        <form class="center-block">
            <div class="form-group">
                <!-- ko if: cartItem.id === undefined -->
                <label for="cartItem_Quantity">Quantity</label>
                <!-- /ko -->
                <div class="input-group form-group-sm">
                    <div class="col-sm-8">
                        <input class="form-control" id="cartItem_Quantity" name="cartItem.Quantity" type="text" value="0">
                        <span class="field-validation-valid text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add To Cart</button>
            </div>
        </form>

        <div class="progress" data-bind="visible: sending" style="display: none;">
            <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                <span class="sr-only"></span>
            </div>
        </div>

    </div>
</div>






