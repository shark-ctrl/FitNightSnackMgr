@model FitNightSnackMgr.ViewModels.AdminViewModel;
@{
    Layout = "~/Views/Shared/_Layout _admin.cshtml";
}
@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/bootstrap-select/bootstrap-select.css" id="theme-stylesheet">

<h1>管理员编辑</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.WorkMan.Id" />
            <div class="form-group">
                <label asp-for="@Model.WorkMan.LoginAccount" class="control-label"></label>
                <input asp-for="@Model.WorkMan.LoginAccount" class="form-control" />
                <span asp-validation-for="@Model.WorkMan.LoginAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.WorkMan.PassWord" class="control-label"></label>
                <input asp-for="@Model.WorkMan.PassWord" class="form-control" />
                <span asp-validation-for="@Model.WorkMan.PassWord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.WorkMan.AdminName" class="control-label"></label>
                <input asp-for="@Model.WorkMan.AdminName" class="form-control" />
                <span asp-validation-for="@Model.WorkMan.AdminName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="@Model.WorkMan.Permissions" class="control-label"></label>
                <select asp-for="@Model.WorkMan.Permissions" title="Select a number" class="selectpicker form-control" data-container="body" data-live-search="true" data-hide-disabled="true" data-max-options="1">
                    <option value="0">管理员</option>
                    <option value="1">普通员工</option>

                </select>
            </div>

        


            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">回到主菜单</a>
</div>
<script src="~/bootstrap-select/jquery.min.js"></script>
<script src="~/bootstrap-select/bootstrap.min.js"></script>
<script src="~/bootstrap-select/bootstrap-select.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
